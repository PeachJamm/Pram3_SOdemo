{
  "name": "pram3-so-demo",
  "version": "1.0.0",
  "description": "PRAM3 ERP Core - Sales Order Approval Demo with Camunda Integration",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "restart": "npm run stop && node dist/index.js",
    "stop": "powershell -NoProfile -ExecutionPolicy Bypass -Command \"try { $conn = Get-NetTCPConnection -LocalPort 3001 -ErrorAction Stop; Stop-Process -Id $conn[0].OwningProcess -Force } catch { }\"",
    "dev": "ts-node src/index.ts",
    "db:init": "ts-node src/database/init.ts",
    "db:seed": "ts-node src/database/seed-only.ts",
    "test": "jest",
    "test:worker": "ts-node src/test/worker-db-test.ts",
    "test:deploy": "ts-node src/test/deploy-to-camunda.ts",
    "test:full": "ts-node src/test/test-full-process.ts",
    "test:camunda-task": "ts-node src/test/test-camunda-task-api.ts"
  },
  "dependencies": {
    "@camunda8/sdk": "^8.8.5",
    "camunda-bpmn-moddle": "^0.4.0",
    "cors": "^2.8.6",
    "express": "^4.18.2",
    "socket.io": "^4.8.3",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.0",
    "zeebe-node": "^8.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.3.1",
    "@types/uuid": "^9.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.1.3"
  }
}
